<!DOCTYPE html>
<html>
<head>
  <% include ../head.ejs %>
</head>
<body>
  <div id="login" class="center-vertical">
    <form id="form-login" method="post" class="well">
      <h2>JBS</h2>
      <h6>로그인</h6>
      <div class="form-group">
        <label>게정이름</label>
        <input type="text" id="user-tf" name="user" class="form-control">
      </div>
      <div class="form-group">
        <label>비밀번호</label>
        <input type="password" id="pass-tf" name="pass" class="form-control">
      </div>
      <div class="controls">
        <button type="button" class="btn btn-default button-remember-me"><span class="glyphicon glyphicon-unchecked button-remember-me-glyph"></span>로그인 기억</button>
        <button type="submit" class="btn btn-primary button-sign-in"><span class="glyphicon glyphicon-lock"></span>로그인</button>
      </div>
      <div class="clearfix"></div>
      <hr>
      <div class="btm-links">
        <div id="forgot-password"><a href="#">Forgot Your Password?</a></div>
        <div id="create-account"><a href="/signup">Create An Account</a></div>
      </div>
      <div class="clearfix"></div>
    </form>
  </div>
  <% include ../modals/alert.ejs %>
  <% include ../modals/lost-password.ejs %>
  <script src="/vendor/jquery-2.2.3.min.js"></script>
  <script src="/vendor/jquery.form.min.js"></script>
  <script src="/vendor/bootstrap.min.js"></script>
  <script src="/js/views/login.js"></script>
  <script src="/js/controllers/loginController.js"></script>
  <script src="/js/form-validators/loginValidator.js"></script>
  <script src="/js/form-validators/emailValidator.js"></script>
</body>
</html>